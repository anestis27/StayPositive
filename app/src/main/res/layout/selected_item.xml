<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detailsScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:orientation="vertical"
        android:useDefaultMargins="true" >

        <TextView
            android:id="@+id/nameLabelTextView"
            style="@style/ContactLabelTextView"
            android:layout_column="0"
            android:layout_row="0"
            android:text="@string/date" />

        <TextView
            android:id="@+id/dateTextView"
            android:layout_column="1"
            android:layout_row="0"
            style="@style/ContactTextView" />

        <TextView
            android:id="@+id/ffirstnoteTextView"
            android:layout_column="0"
            android:layout_row="1"
            android:text="@string/_1th_note"
            style="@style/ContactLabelTextView" />

        <TextView
            android:id="@+id/firstnoteTextView"
            android:layout_column="1"
            android:layout_row="1"
            style="@style/ContactTextView" />

        <TextView
            android:id="@+id/ssecondnoteTextView"
            android:layout_column="0"
            android:layout_row="2"
            android:text="@string/_2th_note"
            style="@style/ContactLabelTextView" />

        <TextView
            android:id="@+id/secondnoteTextView"
            android:layout_column="1"
            android:layout_row="2"
            style="@style/ContactTextView" />

        <TextView
            android:id="@+id/tthirtnoteTextView"
            android:layout_column="0"
            android:layout_row="3"
            android:text="@string/_3th_note"
            style="@style/ContactLabelTextView" />

        <TextView
            android:id="@+id/thirtnoteTextView"
            android:layout_column="1"
            android:layout_row="3"
            style="@style/ContactTextView" />


    </GridLayout>

</ScrollView>
